<% include ../partials/header %>
<div class="container">
    
<h1 class="heading">New Post</h1>

<div class="container form">
  <form action="/posts" method="POST">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <label class="input-group-text" for="inputGroupSelect01">Category</label>
      </div>
      <select class="custom-select" id="inputGroupSelect01" name="post[category]">
        <option selected>Choose...</option>
        <option value="Music">Music</option>
        <option value="Fashion">Fashion</option>
        <option value="Car">Car</option>
        <option value="Travel">Travel</option>
        <option value="Food">Food</option>
        <option value="Movie">Movie</option>
        <option value="Health">Health</option>
        <option value="Technology">Technology</option>
        <option value="Others">Others</option>
      </select>
  </div>
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="post[title]" placeholder="title">
  </div>
  <div class="form-group">
    <label for="image">Image Url</label>
    <input type="text" class="form-control" id="image" name="post[image]" placeholder="image url">
  </div>
  <div class="form-group">
    <label for="body">Body</label>
    <textarea class="form-control" id="body" name="post[body]" rows="6"></textarea>
  </div>
  <button type="submit" class="btn btn-outline-success">Post</button>
</form>
</div>

</div>

<% include ../partials/footer %>