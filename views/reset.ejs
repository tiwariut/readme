<% include ./partials/header %>

<h1 class="heading">Reset Password</h1>

<div class="container authForm">
  <form action="/login" method="POST">
  <div class="form-group">
    <label for="password">New Password</label>
    <input type="password" class="form-control" value="" name="password" placeholder="new password" autofocus="autofocus">
  </div>
  <div class="form-group">
    <label for="confirm">Confirm Password</label>
    <input type="password" class="form-control" value="" name="confirm" placeholder="confirm password">
  </div>
  <div class="form-group">
      <button type="submit" class="btn btn-primary">Update Password</button>
  </div>
</form>  
</div>

<% include ./partials/footer %>