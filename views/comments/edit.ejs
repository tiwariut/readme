<% include ../partials/header %>
<div class="container">
    
<h1 class="heading">Edit Comment</h1>

<div class="container form">
<form action="/posts/<%= post._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
  <div class="form-group">
    <label for="text">Text</label>
    <input type="text" class="form-control" id="text" name="comment[text]" value="<%= comment.text %>">
  </div>
  <div class="form-group">
    <label for="author">Author</label>
    <input type="text" class="form-control" id="author" name="comment[author]" value="<%= comment.author %>">
  </div>
  <button type="submit" class="btn btn-outline-success">Submit</button>
</form>
</div>

</div>

<% include ../partials/footer %>