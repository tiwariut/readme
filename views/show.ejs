<% include partials/header %>

<div class="container show">
      <div class="card border-secondary bg-light mb-3">
          <h1 class="heading card-title"><%= post.title %></h1>
        <div class="card-body">
            <hr>
            <img class="card-img-top" src="<%= post.image %>" alt="Card image cap">
            <hr>
            <p class="card-text"><%- post.body %></p>
            <p class="card-text"><small class="text-muted"><%= post.created.toDateString() %></small></p>
            <a href="/posts/<%= post._id %>/edit" class="btn btn-sm btn-outline-primary">Edit</a>
            <form class="delete-form" action="/posts/<%= post._id%>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-outline-danger">Delete</button>
            </form>
        </div>
        <div class="container">
            <a href="/posts/<%= post._id %>/comments/new">Add Comment</a>
            <h5>Comments</h5>
            <% post.comments.forEach(function(comment){ %>
                 <div class="container">
                     <p><%= comment.text %></p>
                     <small><%= comment.author %></small>
                     <a href="/posts/<%= post._id %>/comments/<%= comment._id %>/edit">Edit</a>
                 </div>
            <% }); %>
        </div>
      </div>
</div>

<% include partials/footer %>